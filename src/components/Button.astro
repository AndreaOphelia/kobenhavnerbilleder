---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = " p-2 font-bold duration-300 hover:rotate-360";

const variantClasses = {
  primary: " border-rose-600 border-2 hover:bg-rose-600 ",

  secondary: "border-2 border-red-500 hover:bg-red-400 hover:animate-bounce",
};

const sizeClasses = {
  large: "text-6xl",

  medium: "text-4xl",

  small: "",
};
